pipeline {	
	agent any
	stages {
    	stage('Git Checkout') {
        	steps {
          	checkout([$class: 'GitSCM',
            	branches: [[name: '*/core']],
            	doGenerateSubmoduleConfigurations: false,
            	extensions: [[$class: 'CleanCheckout']],
            	submoduleCfg: [],
            	userRemoteConfigs: [[url: 'https://github.com/PolankiRadha/testproject.git']]])
             	sh "ls -ltr"
      	}
    	}
    	stage('Development'){
        	steps {
   	        sh 'sudo rm -rf /var/www/html/dev/'
   	        sh 'sudo mkdir /var/www/html/dev/'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/PolankiRadha/testproject.git /var/www/html/dev'
        	}
    	}
    	stage('QA'){
        	steps {
            	sh 'sudo rm -rf /var/www/html/qa'
            	sh 'sudo mkdir /var/www/html/qa'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/PolankiRadha/testproject.git /var/www/html/qa'
        	}
    	}
    	stage('Production'){
        	steps {
            	sh 'sudo rm -rf /var/www/html/prod'
            	sh 'sudo mkdir /var/www/html/prod'
            	sh 'sudo systemctl start httpd'
            	sh 'sudo git clone https://github.com/PolankiRadha/testproject.git /var/www/html/prod'
         	}
    	}   	 
	}
}
